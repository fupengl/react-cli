{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useNx": true,
  "useWorkspaces": true,
  "version": "0.17.0",
  "npmClient": "pnpm",
  "command": {
    "version": {
      "allowBranch": ["main", "develop"],
      "ignoreChanges": [
        "**/__fixtures__/**",
        "**/__tests__/**",
        "**/*.md",
        "**/pnpm-lock.yaml"
      ],
      "conventionalCommits": true,
      "message": "chore: release"
    }
  }
}
