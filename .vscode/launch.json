  "version": "0.2.0",
  "configurations": [
    {
      "name": "ts-node",
      "type": "node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "args": ["${relativeFile}"],
      "cwd": "${workspaceFolder}",
      "runtimeArgs": ["--loader", "ts-node/esm"],
      "protocol": "inspector",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
